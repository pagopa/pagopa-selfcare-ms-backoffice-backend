<policies>
  <inbound>
    <cors>
      <allowed-origins>
        <origin>https://${origin}</origin>
        ${local_origin}
      </allowed-origins>
      <allowed-methods>
        <method>GET</method>
        <method>POST</method>
        <method>PUT</method>
        <method>DELETE</method>
        <method>OPTIONS</method>
      </allowed-methods>
      <allowed-headers>
        <header>*</header>
      </allowed-headers>
    </cors>
    <base/>
    <set-backend-service base-url="https://${hostname}/selfcare/pagopa/v1"/>
  </inbound>
  <outbound>
    <base/>
  </outbound>
  <backend>
    <base/>
  </backend>
  <on-error>
    <base/>
  </on-error>
</policies>
